{{!< default}}

<div class="gh-page">
    <div class="gh-container">
        <div class="gh-layout">
            {{> "sidebar"}}

            <div class="gh-main-content">
                {{#tag}}
                <header class="gh-page-head">
                    <h1>{{#foreach (split name separator="content-type-")}}{{this}}{{/foreach}}</h1>

                    {{#if description}}
                    <p>{{description}}</p>
                    {{/if}}

                    {{#if feature_image}}
                    <img class="gh-page-image" src="{{feature_image}}" alt="{{name}}" />
                    {{/if}}
                </header>
                {{/tag}}

                <div class="gh-postfeed">
                {{#foreach posts}}
                    {{> "card"}}
                {{/foreach}}
                </div>
            </div>
        </div>
    </div>
</div>
